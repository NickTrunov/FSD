mixin gallery(image, arrows = true)
    .gallery
        .gallery__image
            img(src=image)
            if (arrows)
                .gallery__arrow.gallery__arrow--left keyboard_arrow_left
                .gallery__arrow.gallery__arrow--right keyboard_arrow_left
            .gallery__point-container
                .gallery__point.gallery__point--fill
                .gallery__point
                .gallery__point
                .gallery__point